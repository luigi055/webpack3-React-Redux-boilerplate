{
  "name": "react-redux-webpack2-boilerplate",
  "version": "1.0.0",
  "description": "Webpack 2 Boilerplate for React + Redux",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "webpack-dashboard -- node ./node_modules/webpack-dev-server/bin/webpack-dev-server.js",
    "prod": "export NODE_ENV=production || SET \"NODE_ENV=production\" && webpack-dashboard -- node ./node_modules/webpack-dev-server/bin/webpack-dev-server.js -p",
    "build-dev": "rm -rf ./public && webpack",
    "build-dev--watch": "webpack -d -w",
    "build": "export NODE_ENV=production || SET \"NODE_ENV=production\" && rm -rf ./public && webpack -p",
    "test": "mocha --compilers js:babel-core/register --require ./src/tests/testHelpers.js --recursive ./src/tests",
    "test-watch": "yarn run test -- --watch",
    "clear": "rm -rf ./public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/luigi055/webpack2-React-Redux-boilerplate.git"
  },
  "keywords": [
    "react",
    "redux",
    "react-router-v4",
    "webpack2",
    "boilerplate"
  ],
  "author": "Pedro La Rosa",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel-core": "^6.24.0",
    "babel-loader": "^6.3.2",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.2.2",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "chai": "^3.5.0",
    "chai-jquery": "^2.0.0",
    "css-loader": "0.28.0",
    "css-mqpacker": "^5.0.1",
    "eslint": "^3.16.1",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "0.11.1",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "image-webpack-loader": "^3.2.0",
    "jsdom": "^9.11.0",
    "mocha": "^3.2.0",
    "node-sass": "^4.5.0",
    "pixrem": "^3.0.2",
    "postcss-loader": "^1.3.2",
    "postcss-vmin": "^2.0.0",
    "postcss-will-change": "^1.1.0",
    "react-addons-test-utils": "^15.4.2",
    "resolve-url-loader": "^2.0.0",
    "sass-loader": "^6.0.2",
    "script-loader": "^0.7.0",
    "sinon": "^2.0.0",
    "sinon-chai": "^2.8.0",
    "style-loader": "0.16.1",
    "stylelint": "^7.9.0",
    "stylelint-config-standard": "^16.0.0",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.1",
    "webpack-dashboard": "^0.3.0",
    "webpack-dev-server": "^2.4.1"
  },
  "dependencies": {
    "bootstrap": "^4.0.0-alpha.6",
    "express": "^4.15.2",
    "font-awesome": "^4.7.0",
    "foundation-sites": "^6.3.0",
    "jquery": "3.2.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.3",
    "react-router-dom": "^4.0.0",
    "redux": "^3.6.0",
    "redux-promise": "^0.5.3",
    "redux-thunk": "^2.2.0"
  }
}
